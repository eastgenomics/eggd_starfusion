{
  "name": "starfusion_v1.11.1",
  "title": "STAR-Fusion v1.0.0",
  "summary": "STAR-Fusion app which runs the official Docker",
  "properties": {
    "github release": "pending"
  },
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "junction",
      "label": "junction",
      "help": "Chimeric junction files, produced by STAR-Aligner",
      "class": "file",
      "patterns": ["*_chimeric.out.junction"],
      "optional": false
    },
    {
      "name": "sf_docker",
      "label": "sf_docker",
      "help": "File ID of Starfusion Docker image in DNA Nexus",
      "class": "file",
      "optional": false
    },
    {
      "name": "genome_lib",
      "label": "genome_lib",
      "help": "STAR genome resources",
      "class": "file",
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "starfusion_outputs",
      "label": "starfusion_outputs",
      "help": "STAR-Fusion output files",
      "class": "array:file"
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 12
      }
    },
    "release": "20.04",
    "file": "src/code.sh",
    "version": "0",
    "interpreter": "bash",
    "distribution": "Ubuntu"
  },
  "access": {
    "allProjects": "UPLOAD"
  },
  "ignoreReuse": false,
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "main": {
          "instanceType": "mem3_ssd1_v2_x8"
        }
      }
    }
  }
}
