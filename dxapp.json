{
  "name": "eggd_starfusion",
  "title": "eggd_starfusion",
  "summary": "Runs STAR-Fusion on aligned RNA data, and returns information about gene fusions.",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "bam",
      "label": "BAM file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "candidates",
      "label": "candidates",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 4
      }
    },
    "interpreter": "bash",
    "file": "src/code.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x4"
        }
      }
    }
  }
}
